<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/button_admin"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Class Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/button_admin"
            app:strokeWidth="2dp">

            <TextView
                android:id="@+id/tvClassIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/button_admin"
                android:gravity="center"
                android:text="🏫"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Class Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Class Name and Capacity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClassName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Papatya Sınıfı" />

                <TextView
                    android:id="@+id/tvClassCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/status_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="15/20"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="15/20" />

            </LinearLayout>

            <!-- Grade -->
            <TextView
                android:id="@+id/tvClassGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="Anaokulu" />

            <!-- Room and Schedule -->
            <TextView
                android:id="@+id/tvClassRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                tools:text="🏠 A101 • 08:00-15:00" />

        </LinearLayout>

        <!-- Action Menu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClassMenu"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:icon="@drawable/ic_child"
            app:iconSize="20dp"
            app:iconTint="@color/text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>