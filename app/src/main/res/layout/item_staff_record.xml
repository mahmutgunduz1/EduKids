<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/button_admin"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Staff Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/button_admin"
            app:strokeWidth="2dp">

            <TextView
                android:id="@+id/tvStaffAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/button_admin"
                android:gravity="center"
                android:text="👨‍💼"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:text="MK" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Staff Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name and Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStaffName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Mehmet Kaya" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStaffStatus"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif"
                    android:textSize="10sp"
                    app:chipMinHeight="24dp"
                    tools:text="Aktif" />

            </LinearLayout>

            <!-- Role -->
            <TextView
                android:id="@+id/tvStaffRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/status_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="Öğretmen" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvStaffEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="teacher@test.com" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvStaffDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                tools:text="Başlangıç: 15.09.2024" />

        </LinearLayout>

        <!-- Action Menu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStaffMenu"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:icon="@drawable/ic_child"
            app:iconSize="20dp"
            app:iconTint="@color/text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>